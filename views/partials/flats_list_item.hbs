<!--one flat-->
<a href="/advertisements/1">
  <div class="flat_page">
    <div class="flat_page__inner">
      <div class="images">
        <div class="big_image">
          <div class="slideshow-container">

            <!-- Full-width images with number and caption text -->
<!--              photos [0, 5]-->
<!--              is working!!!!!!!!-->

              {{#each adv.photos2}}
                  <div class="mySlides fade">
                      <div class="numbertext">{{@index}} / {{../adv.photos2.length}}</div>
                      <img alt="" class=flat_page__info__image"
                           src="{{this}}" style="width:100%">
                  </div>
              {{/each}}

            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
          </div>
        </div>
        <div class="small_images">
          <img
            alt=""
            src={{adv.photos.[0]}}
          />
          <img
            alt=""
            src={{adv.photos.[1]}}
          />
        </div>
      </div>
      <div class="info">
        <div class="info__without_full_description">
          <div class="info__without_full_description__and_developer">
            <a class="name" href="second_flat.html">
              <p class="info__name__inner">{{adv.area}} м<sup>2</sup>, {{adv.roomCount}}-комнатная
                квартира</p>
            </a>
            <a class="description" href="second_flat.html">
              <div class="additional_info">
                <p>{{adv.floorNumber}} этаж из {{adv.totalFloorNumber}}
                  <br />
                    {{adv.location}}
                  <br />
                    м&nbsp{{adv.metroStation}}</p>
              </div>
              <div class="flat_price">
                <span class="flat_price__overall">{{adv.price}}₽
                  <br />
                  <span class="price_per_meter">{{adv.pricePerMeter}} за м<sup>2</sup>
                  </span>
                </span>

              </div>
            </a>
            <div class="flats_list_buttons">
              <a class="phone_number" id="phone_number_1">Показать телефон</a>
              <button class="favourites favourites_button">Добавить в избранное</button>
            </div>
          </div>
        </div>
        <div class="flat_page__full_description">
          <p class="flat_page__info__full_description__heading">Описание</p>
          <p class="flat_page__info__full_description__text">
              {{adv.description}}
          </p>
        </div>
      </div>
    </div>
    <div class="flat_page__description">
      <p class="flat_page__info__full_description__heading">Описание</p>
      <p class="flat_page__info__full_description__text">
          {{adv.description}}
      </p>
    </div>
  </div>
</a>