<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<p class="search_result">
    Купить {{adv.roomCount}}-комнатную квартиру
</p>
<div class="background_for_one_flat_page">
    <div class="flat_page__info">
        <div class="flat_history_buttons_block">
            <div class="flat_page__info__button">Купить ></div>
            <div class="flat_page__info__button">&ensp;Квартира ></div>
            <div class="flat_page__info__button">&ensp;Двухкомнатные</div>
        </div>
        <div class="flat_page__info__images">
            <!-- Slideshow container -->
            <div class="slideshow-container slider" id="div{{adv.id}}">

                {{#each adv.photos}}
                    <div class="numbertext">{{math @index '+' 1}} / {{../adv.photos.length}}</div>
                    <img alt="" class="mySlides" src="{{this}}" style="width:100%">
                {{/each}}

                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusDivs(this, -1)">&#10094;</a>
                <a class="next" onclick="plusDivs(this, 1)">&#10095;</a>
            </div>
            <br>

            <!-- The dots/circles -->
            <div style="text-align:center">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
                <span class="dot" onclick="currentSlide(3)"></span>
            </div>
        </div>

        <div class="flat_page_info__tags_and_other">
            <div class="flat_page__price__views_and_price">
                <p class="flat_page__price__views_and_price__views"> 9 часов назад, 105 просмотров</p>
                <p class="flat_page__price__views_and_price__price"> {{adv.price}}₽</p>
            </div>
            <div class="flat_page__tags">
                <p class="flat_page__tags__mortgage">Ипотека от 89&nbsp547₽ в мес.</p>
                <p class="flat_page__tags__show_online">Проверено в Росреестре</p>
                <p class="flat_page__tags__rented">Хорошая цена</p>
                <p class="flat_page__tags__bargaining">Торг</p>
                <p class="flat_page__tags__easy_sale">Свободная продажа</p>
                <div class="flat_page__tags__buttons">
                    <a class="flat_page__tags__phone_number" id="phone_number_7">
                        Показать телефон +7(xxx)xxx-xx-xx
                    </a>
                    <button class="flat_page__tags__favourites favourites_button">Добавить в избранное</button>
                </div>
            </div>
        </div>

        <div class="flat_page_info__characteristics_and_description">
            <div class="flat_page_info__about_cur_flat">
                <div class="flat_page_info__about_cur_flat__total_area">
                    <p> {{adv.area}} м<sup>2</sup></p>
                    <p>общая</p>
                </div>
                <div class="flat_page_info__about_cur_flat__item">
                    <p>{{adv.livingArea}} м <sup>2</sup></p>
                    <p>жилая</p>
                </div>
                <div class="flat_page_info__about_cur_flat__item">
                    <p>{{adv.kitchenArea}} м <sup>2</sup></p>
                    <p>кухня</p>
                </div>
                <div class="flat_page_info__about_cur_flat__item">
                    <p>{{adv.floorNumber}} этаж</p>
                    <p>из {{adv.totalFloorNumber}}</p>
                </div>
                <div class="flat_page_info__about_cur_flat__item">
                    <p>{{adv.ceilingHeight}} м</p>
                    <p>потолки</p>
                </div>
                <div class="flat_page_info__about_cur_flat__item">
                    <p>{{adv.yearOfBuilding}} год</p>
                    <p>год постройки</p>
                </div>
            </div>
            <div class="flat_page_info__about_cur_flat_990px">
                <p class="flat_page_info__about_cur_flat_990px__topic">Характеристики</p>
                <p class="flat_page_info__about_cur_flat_990px__characteristics"><br>{{adv.floorNumber}} этаж
                    из {{adv.totalFloorNumber}}<br>
                    {{adv.area}} м<sup>2</sup> - общая площадь<br>
                    {{adv.kitchenArea}} м<sup>2</sup> - кухня<br>
                    {{adv.livingArea}} м<sup>2</sup> - жилая<br>
                    {{adv.ceilingHeight}} м - потолки<br>
                    {{adv.yearOfBuilding}} - год постройки<br>
                </p>
            </div>
            <div class="flat_page__info__full_description">
                <p>Описание</p>
                <p class="flat_page__info__full_description__text_all">
                    {{adv.description}}
                </p>
            </div>
            <div class="flat_page__info__full_description">
                <p>Расположение</p>
                <div class="flat_page__info__full_description__map" id="map"></div>
            </div>
        </div>

    </div>
    <div class="flat_page__price">
        <div class="flat_page__price__views_and_price">
            <p class="flat_page__price__views_and_price__views"> 9 часов назад, 105 просмотров</p>
            <p class="flat_page__price__views_and_price__price"> {{adv.price}}₽</p>
        </div>
        <div class="flat_page__tags">
            <p class="flat_page__tags__mortgage">Ипотека от 89&nbsp547₽ в мес.</p>
            <p class="flat_page__tags__show_online">Проверено в Росреестре</p>
            <p class="flat_page__tags__rented">Хорошая цена</p>
            <p class="flat_page__tags__bargaining">Торг</p>
            <p class="flat_page__tags__easy_sale">Свободная продажа</p>
            <div class="flat_page__tags__buttons">
                <a class="flat_page__tags__phone_number" id="phone_number_8">
                    Показать телефон +7(xxx)xxx-xx-xx
                </a>
                <button class="flat_page__tags__favourites favourites_button">Добавить в избранное</button>
            </div>
        </div>
    </div>
</div>
{{> ymaps latitude=adv.latitude longitude=adv.longitude initialZoom=16 ableToCreatePlacemark=false }}
<script src="/javascript/slide_show.js"></script>
<script src="/javascript/phone_number_button.js"></script>